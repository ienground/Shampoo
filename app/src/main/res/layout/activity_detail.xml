<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textSize="18sp"
                tools:text="Name" />

        </com.google.android.material.appbar.MaterialToolbar>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginHorizontal="@dimen/usual_margin"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_battery"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/usual_margin"
                    android:layout_marginTop="@dimen/usual_margin"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:icon="@drawable/ic_battery_alert"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_liquid"
                    app:layout_constraintTop_toBottomOf="@id/card_image"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_liquid"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/usual_margin"
                    app:icon="@drawable/ic_shampoo_full"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toEndOf="@id/btn_battery"
                    app:layout_constraintEnd_toStartOf="@id/btn_measure"
                    app:layout_constraintTop_toBottomOf="@id/card_image"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_measure"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/usual_margin"
                    android:layout_marginTop="@dimen/usual_margin"
                    app:icon="@drawable/ic_renew"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toEndOf="@id/btn_liquid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_image"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/usual_margin"
                    style="@style/Widget.Material3.CardView.Elevated"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_battery">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/usual_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_content_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="거실"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textAlignment="textEnd"
                            android:layout_marginStart="@dimen/usual_margin"
                            app:layout_constraintStart_toEndOf="@id/tv_title_location"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title_location"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/usual_margin"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_location" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_content_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="@string/shampoo"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:layout_marginStart="@dimen/usual_margin"
                            app:layout_constraintStart_toEndOf="@id/tv_title_type"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title_type" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_title_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/capacity"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/usual_margin"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_type" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_content_capacity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="500ml"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textAlignment="textEnd"
                            android:layout_marginStart="@dimen/usual_margin"
                            app:layout_constraintStart_toEndOf="@id/tv_title_capacity"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title_capacity" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:tabGravity="start"
                    app:tabMode="scrollable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_detail">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/capacity" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/battery" />

                </com.google.android.material.tabs.TabLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/graph_usage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/usual_margin"
                    android:layout_marginTop="@dimen/usual_margin"
                    app:layout_constraintDimensionRatio="3:2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabs" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/usual_margin"
                    tools:itemCount="5"
                    tools:listitem="@layout/adapter_device_log"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/graph_usage" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>